<h5>商品一覧</h5>
<div class="container">
  <div class="row">




  <table class="table table-borderless mb-auto">
    <thead>
      <tr class="thead-light">
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to admin_item_path(item.id) do %>
        <%= item.name %><% end %></td>
      <td><%= item.price.to_s(:delimited) %>(<%= item.price.div(1.1).to_s(:delimited) %>)円</td>
      <td>
        <% if item.is_active %>
           販売中
          <% else %>
            販売停止中
          <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>




  </div>
</div>
<%= paginate @items %>