<h5>商品一覧</h5>

<table class="table mx-auto">
  <thead>
    <tr class="table-light">
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td><%= item.is_active %></td>
    </tr>
      <% end %>
  </tbody>
</table>

<%= paginate @items %>