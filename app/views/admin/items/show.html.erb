<h5>商品詳細</h5>
<div class="row">
  <div class="col-md-4" >
  <% if @item.image.attached? %>
    <%= image_tag @item.image,size: "200x150" %>
  <% else %>
    <%= image_tag 'no_image',size: "200x150" %>
  <% end %>
  </div>

  <table class="table table-borderless col-md-8">
    <thead>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td><%= @item.price.to_s(:delimited) %>(<%= @item.price.div(1.1).to_s(:delimited) %>)円</td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td>
          <% if @item.is_active == true %>
           販売中
          <% else %>
            販売停止中
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>



<div class="text-center">
  <%= link_to "編集する", edit_admin_item_path ,class: "btn btn-success " %>
</div>