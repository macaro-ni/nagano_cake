<h5>商品詳細</h5>
<div class="container">
  <div class="row">

<div class="col-md-4" >
<% if @item.image.attached? %>
  <%= image_tag @item.image,size: "200x150" %>
<% else %>
  <%= image_tag 'no_image',size: "200x150" %>
<% end %>
</div>

<table class="table table-borderless col-md-8">
  <thead>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>税抜価格</td>
      <td><%= @item.price.to_s(:delimited) %>(<%= @item.price.div(1.1).to_s(:delimited) %>)円</td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td><%= @item.is_active %></td>
    </tr>
  </tbody>
</table>



  </div>
</div>
