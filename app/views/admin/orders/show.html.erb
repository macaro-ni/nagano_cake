<h5>注文履歴詳細</h5>

<id class="container">
  <id class="row">

    <table class="col-md-5">
      <tr>
        <th>購入者</th>
        <td><!--customerのshowページへのリンク作りたかった-->
          <!--%= link_to admin_customer_path do %-->
          <%= @order.customer.last_name+" "+@order.customer.first_name %><!--% end %--></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.address %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
    </table>

    <table class="table thead-light col-md-8">
      <thead>
        <tr class="thead-light">
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal.to_s(:delimited) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="col-md-1"></div>

    <table class="col-md-3">
      <tr>
        <th>商品合計</th>
        <td><%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <th>送料</th>
        <td><%= @order.shipping_cost.to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <th><%= @order.total_payment.to_s(:delimited) %>円</th>
      </tr>
    </table>
  </id>
</id>

