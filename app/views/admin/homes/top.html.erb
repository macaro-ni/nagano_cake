<h5>注文履歴一覧</h5>

<id class="container">
  <id class="row">
    <table class="table col-md-12">
      <thead>
        <tr class="thead-light">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>

        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
            <td><%= link_to admin_order_path(order.id) do %>
            <%= order.created_at.strftime('%Y/%m/%d %H:%M') %><% end %></td>
            <td>購入者
              <%= order.customer.last_name + order.customer.first_name %>
              </td>
            <td><%= order.order_details.count %></td>

        </tr>
        <% end %>
      </tbody>
    </table>
  </id>
</id>


<%= paginate @orders %>