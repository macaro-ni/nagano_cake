<h5>注文情報確認</h5>

<div class ="container">
  <div class="row">

    <table class="table table-bordered col-md-8">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>

        </tr>
      </thead>
      <tbody>
          <% @cart_items.each do |cart_item| %>


          <tr>

              <td><%= cart_item.item.name %></td>

              <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>

              <td><%= cart_item.amount %></td>

              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
                    <% @total += cart_item.subtotal %>
          </tr>
              <% end %>
      </tbody>
    </table>



      <table class="table table-bordered col-md-4">
        <tr>
          <th class="table-secondary">送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th class="table-secondary">合計金額</th>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-secondary">請求金額</th>
          <td><%= @total + @order.shipping_cost.to_i %></td>
        </tr>
      </table>

    <div class="col-md-12">
      <h5>支払方法</h5>
      <p><%= @order.payment_method_i18n %></p>

      <h5>お届け先</h5>
      <p><%= @order.postal_code %>
         <%= @order.address %><br>
         <%= @order.name %></p>
         <!--hidden_fieldでorderテーブルを作るためのform_with-->
         <%= form_with model: @order ,url: orders_path do |f| %>
             <%= f.hidden_field :postal_code, :value => @order.postal_code %>
             <%= f.hidden_field :address, :value => @order.address %>
             <%= f.hidden_field :name, :value => @order.name %>
             <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
             <%= f.hidden_field :total_payment, :value => @total+@order.shipping_cost %>
             <%= f.hidden_field :payment_method, :value => @order.payment_method %>

        <%= f.submit "注文を確定する",class: "btn btn-success" %>


      <% end %>
    </div>
  </div>
</div>

