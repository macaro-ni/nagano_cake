<h5>新規会員登録</h5>
<div class="row">
  <div class="col-md-10">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>


    <table class="table table-borderless align-items-center justify-content-center">

      <tr>
        <td>名前</td>
        <td>
          <div class="field">
            <%= f.label :last_name, "(姓)" %>
            <%= f.text_field :last_name, autofocus: true %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.label :first_name, "(名)" %>
            <%= f.text_field :first_name %>
          </div>
        </td>
      </tr>


      <tr>
        <td>フリガナ</td>
        <td>
          <div class="field">
            <%= f.label :last_name_kana, "(セイ)" %>
            <%= f.text_field :last_name_kana, autofocus: true %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.label :first_name_kana, "(メイ)" %>
            <%= f.text_field :first_name_kana %>
          </div>
        </td>
      </tr>

      <tr>
        <td>メールアドレス</td>
         <td>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </td>
        <td></td>
      </tr>

      <tr>
        <td>郵便番号(ハイフンなし)</td>
          <td>
          <div class="field">
            <%= f.text_field :postal_code %>
          </div>
        </td>
        <td></td>
      </tr>

      <tr>
        <td>住所</td>
          <td>
          <div class="field">
            <%= f.text_field :address %>
          </div>
        </td>
        <td></td>
      </tr>

      <tr>
        <td>電話番号(ハイフンなし)</td>
          <td>
          <div class="field">
            <%= f.text_field :telephone_number %>
          </div>
        </td>
        <td></td>
      </tr>


      <tr>
        <td>パスワード(6文字以上)</td>
          <td>
            <div class="field">
              <% if @minimum_password_length %>
              <em><% @minimum_password_length %></em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </td>
        <td></td>
        </div>
      </tr>


      <tr>
        <td>パスワード(確認用)</td>
        <td>
          <div class="field">
              <%= f.password_field :password_confirmation %>
          </div>
        </td>
        <td></td>
      </tr>
    </table>

  </div>
</div>




    <%= f.submit '新規登録' ,class: "btn btn-success" %>


<% end %>

<h5>既に登録済みの方</h5>
<%= link_to "こちら",new_customer_session_path %><span>からログインしてください。</span>
